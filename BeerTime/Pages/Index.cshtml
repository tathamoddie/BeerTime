@page
@model IndexModel
@{
    ViewData["Title"] = "isitbeerti.me";
}

<div id="beer-justification">
    <h1>Always.</h1>
    <p>Just tell your friends that it's noon in <a id="googleLink" href="http://maps.google.com/?q=@Model.LocationName" target="_blank">@Model.LocationName</a>.</p>
</div>

@section Scripts {

    <script type="text/javascript">
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function (position) {
                var a = document.getElementById('googleLink');
                var txt = a.innerHTML;
                a.href = "http://maps.google.com/?saddr=" + position.coords.latitude + ',' + position.coords.longitude + '&daddr=' + txt;
            });
        }
    </script>

}